<th>{{.Label}}</th>
<td class="tab">
    {{- if isOTP .Value}}
    <button class="tab"
            hx-get="/totp/{{.RecordID}}?detail={{.DetailID}}"
            hx-target="#{{.ID}}otp"
            hx-swap="outerHTML">
      TOTP
    </button>
    <input id="{{.ID}}otp" type="hidden" value="" />{{end}}
    <button class="tab" tabindex="-1" id="{{.ID}}btn">Hide</button>
</td>
<td class="ctext">
  <button id="{{.ID}}vis" tabindex=4 class="ctext notes pulseable copyable">
    {{formatText .Value}}
  </button>
  <button id="{{.ID}}nvis" tabindex=4
          class="nvis ctext pulseable copyish copyclick"
          copy-value="{{.Value}}">
    (hidden)
  </button>
</td>
